// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Message Reactions
model MessageReaction_Stimulus {
  id        String                     @id @default(cuid())
  createdAt DateTime                   @default(now())
  updatedAt DateTime                   @updatedAt
  message   String                     @unique
  keyword   Boolean                    @default(true)
  stickers  Boolean                    @default(true)
  reactions MessageReaction_Response[]
}

model MessageReaction_Response {
  id         String                   @id @default(cuid())
  createdAt  DateTime                 @default(now())
  updatedAt  DateTime                 @updatedAt
  message    String
  stimulus   MessageReaction_Stimulus @relation(fields: [stimulusId], references: [id], onDelete: Cascade)
  stimulusId String
}

// Tree Stats
model TreeStats_Trees {
  id        String            @id @default(cuid())
  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt
  name      String            @unique
  stats     TreeStats_Stats[]
}

model TreeStats_Stats {
  id     String          @id @default(cuid())
  date   DateTime        @default(now())
  tree   TreeStats_Trees @relation(fields: [treeId], references: [id])
  treeId String
  rank   Int
  height Float
}
